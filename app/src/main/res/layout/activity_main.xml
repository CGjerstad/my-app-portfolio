<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#212121">


    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Corbin&apos;s Nanodegree Apps"
        android:textColor="#FAFAFA"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonSpotStream"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="butSpotStream"
        android:text="SPOTIFY STREAMER"
        android:background="#FFAB00"
        android:textStyle="bold"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonSuperDuo"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="butSupDuo"
        android:text="SUPER DUO"
        android:background="#FFAB00"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/buttonBuildItBig"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="butBuildBig"
        android:text="BUILD IT BIGGER"
        android:background="#FFAB00"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/buttonXYZRead"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="butXYZReader"
        android:text="XYZ Reader"
        android:background="#FFAB00"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/buttonCapstone"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="butCapstone"
        android:text="CAPSTONE: MY OWN APP"
        android:background="#FF6F00"
        android:textStyle="bold"
        android:textSize="16sp"/>

</LinearLayout>
